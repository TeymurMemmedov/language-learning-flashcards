@{
    ViewData["Title"] = "My sets";
}
@model List<SetViewModel>;
<div class="container">
    <div class="modal fade " id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true"></div>
    <div class="row">
            <h1>Your study sets</h1>

            <div class="allTermSetContainer d-flex   flex-wrap  mt-3 col-10 gap-3">
                @for (int i = 0; i < Model.Count; i++)
                {
                <div id="@ViewBag.ids[i]" class="card">
                <div class="card-header d-flex justify-content-between align-items-center ">
                    @if(@Model[i].isPublic==false){
                    <i class="fa-solid fa-lock fa-lg"></i>
                    }
                    else{
                       <i class="fa-solid fa-lock-open fa-lg"></i>
                    }
                    <div class="card-actions">
                        <a asp-action="EditSet" asp-route-id = "@ViewBag.ids[i]" class="btn btn-primary" >
                            <i class="fa-solid fa-pen"></i>
                        </a>
                        
                                <btn @*asp-controller="Account" asp-action="DeleteSet" asp-route-id = "@ViewBag.ids[i]"*@ class="btn btn-danger toggleMyModal">
                            <i class="fa-solid fa-trash"></i>
                        </btn>
                    </div>

                </div>
                <div class="card-body align-items-center">
                    <h5 class="card-title">
                        @Model[i].Title
                    </h5>
                </div>
                <span class="card-term-info ms-3 mb-3 bg-card-count-back w-25 rounded-5 text-center">@Model[i].TermsViewModels.Count cards</span>
                <div class="card-footer d-flex justify-content-between">
                    <span><i class="fa-solid fa-user me-2 "></i>@User.FindFirst("Username").Value</span>
                </div>
            </div>          
                }


                






            </div>
        </div>
    </div>
</div>

