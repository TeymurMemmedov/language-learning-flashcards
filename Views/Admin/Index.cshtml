@model List<UserViewModel>;
@{
    ViewData["Title"] = "User List";
}
<div class="container">
    <div class="row">
        <div class="col-8">
            <h1 class = "mb-2">User List</h1>

            <table class="table">
              <thead>
                <tr>
                  <th scope="col">Id</th>
                  <th scope="col">Email</th>
                  <th scope="col">Username</th>
                  <th scope="col"></th>
                </tr>
              </thead>
              <tbody>
                  @foreach (var user in Model)
                    {
                         <tr>
                      <th scope="row">@user.Id</th>
                      <td>@user.Email</td>
                      <td>@user.Username</td>
                </tr>
                    }
              </tbody>
            </table>
        </div>
    </div>
</div>
